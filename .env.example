# CORS Configuration
# For development - multiple Next.js ports
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# For production - your actual frontend domain
# ALLOWED_ORIGINS=https://yourfrontend.com,https://www.yourfrontend.com

# Session and Cookie Security
SESSION_SECRET=your-very-secure-session-secret-key-here
COOKIE_SECRET=your-very-secure-cookie-secret-key-here

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/shorturl_db?schema=public"

# JWT
JWT_SECRET=your-very-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-very-secure-jwt-refresh-secret-key-here

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=8000

# Sentry (Optional)
# SENTRY_DSN=your-sentry-dsn-here
